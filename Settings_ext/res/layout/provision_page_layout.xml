        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/provision_page_padding_horizontal" android:layout_marginTop="@dimen/provision_next_button_padding_vertical" android:layout_marginRight="@dimen/provision_page_padding_horizontal" android:layout_marginBottom="@dimen/provision_next_button_padding_vertical">
            <Button android:id="@id/provision_btn_extra" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/skip_step" android:layout_weight="1.0" />
            <Button android:id="@id/provision_next" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/provision_next" android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>