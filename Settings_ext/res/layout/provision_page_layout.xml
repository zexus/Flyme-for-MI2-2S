        <FrameLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="@dimen/provision_title_layout_height">
            <LinearLayout android:gravity="bottom|center" android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="@dimen/provision_title_height">
